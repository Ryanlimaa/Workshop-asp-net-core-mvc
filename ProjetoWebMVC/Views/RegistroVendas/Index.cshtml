@{
    ViewData["Title"] = "Registro de Vendas";
}

<h2>@ViewData["Title"]</h2>
<br />
<div class="row">
    <div class="col-md-6">
        <form class="form-horizontal" asp-action="BuscaSimples">
            <fieldset>
                <legend>Busca simples</legend>
                <div class="form-group">
                    <label for="minDate" class="col-lg-2 control-label">Data Min</label>
                    <div class="col-lg-10">
                        <input type="Date" name="minDate" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <label for="maxDate" class="col-lg-2 control-label">Data Max</label>
                    <div class="col-lg-10">
                        <input type="Date" name="maxDate" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-lg-10 col-lg-offset-2">
                        <button type="submit" class="btn btn-primary">Buscar</button>   
                    </div>
                </div>
            </fieldset>
        </form>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <form class="form-horizontal" asp-action="BuscaAgrupada">
            <fieldset>
                <legend>Busca agrupada</legend>
                <div class="form-group">
                    <label for="minDate" class="col-lg-2 control-label">Data Min</label>
                    <div class="col-lg-10">
                        <input type="Date" name="minDate" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <label for="maxDate" class="col-lg-2 control-label">Data Max</label>
                    <div class="col-lg-10">
                        <input type="Date" name="maxDate" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-lg-10 col-lg-offset-2">
                        <button type="submit" class="btn btn-primary">Buscar</button>
                    </div>
                </div>
            </fieldset>
        </form>
    </div>
</div>
